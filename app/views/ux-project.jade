extends include/layouts/default-ux

block body
  section#yodle-com
    #intro
      .row
        .col-lg-12
          h2= project.title
          p.lead!= project.description

          h3 Problem
          .problem!= md(project.problem)
          
          h3 Results
          .results!= md(project.results)

          h4 Tools
          ul.tools
            each tool in project.tools
              li.tool
                strong!= tool.name
                span.function!= ' (' + tool.function + ')'
