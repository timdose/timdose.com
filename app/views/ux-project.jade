extends include/layouts/default-ux

block body
  section.project-page
    .row
      .col-sm-9
        h2= project.title
        p.lead!= project.description

        if project.problem
          h3 Problem
          .problem!= md(project.problem)
        
        if project.results
          h3 Results
          .results!= md(project.results)

        if project.progress
          h3 Results
          .results!= md(project.progress)

        if project.tools
          h4 Tools
          ul.tools
            each tool in project.tools
              li.tool
                strong!= tool.name
                span.function!= ' (' + tool.function + ')'
                
    if project.images
      .row.images
        .col-sm-12
          h3 Images
        each image in project.images
          .col-sm-4
            .thumb-wrapper
              a(href='/images/projects/' + project.name + '/' + image.name)
                img.thumb(src='/images/projects/' + project.name + '/' + image.thumbnail)
