extends include/layouts/default-ux

block header
  header.header
    .row
      .col-sm-8
        h1.heading Tim Dos√©
        p.title UX Designer/Developer
        .lead!= md(about.blurb)
      .col-sm-4.hidden-xs.portrait
        img(src='/images/illustration/portrait.png')

block body
  .main-content
    section#projects    
      .row.heading
        .col-sm-12
          h2 Projects
      .row
        .project-collection
          each project in projects
            .col-sm-4
              a.project(href='/ux/projects/' + project.name)
                .thumb-wrapper
                  img.thumb(src='/images/projects/yodle-com/yodle-com-home.jpg')
                  .screen
                strong.title=project.title
                span.blurb=project.blurb

    .between
    section#about
      .row.heading
        .col-xs-12
          h2 About
      .row
        .col-sm-3.headshot
          img(src="/images/photos/headshot.jpg")
        .col-sm-9
          p!= md(about.intro)
          a.active.btn.btn-lg.btn-primary(href="/ux/resume") Download my resume
