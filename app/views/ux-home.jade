extends include/layouts/default

block header
  header.header
    .row
      .col-sm-8
        h1.heading Tim DosÃ©
        p.title UX Designer/Developer
        .lead!= md(about.blurb)
      .col-sm-4.hidden-xs
        img(src="/images/illustration/portrait.png")

block body

  .main-content
    section#projects    
      .row
        .col-sm-12
          h2 Projects
      .row
        .project-collection
          each project in projects
            .col-sm-4
              a.project(href='/ux/projects/' + project.name)
                span.title=project.title
                span.blurb=project.blurb

    .between
    section#about
      .row
        .col-xs-12
          h2 About
      .row
        .col-sm-3
          img(src="/images/illustration/portrait.png")
        .col-sm-9
          p!= md(about.intro)
          .more
            a(href='/ux/about') Read More >
